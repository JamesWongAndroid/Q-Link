<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_groupID"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/desp"
        android:background="@drawable/qlink_cardview_template_two" />
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">
    
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.19"
            android:layout_gravity="left"
            android:gravity="left"
           />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="0.7" />

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
     >
     <LinearLayout
         android:id="@+id/group_id_row" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="0.3"
         >
         <TextView 
             android:id="@+id/group_id_lable"
             android:text="GROUP ID:"
             android:textSize="20sp"
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             />
         <TextView
            android:id="@+id/textview_groupID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/member_id_row" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="0.3"
         android:layout_below="@id/group_id_row">
         <TextView 
             android:id="@+id/member_id_lable"
             android:text="MEMBER ID:"
             android:textSize="20sp"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             />
         <TextView
            android:id="@+id/textview_memberID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/bin_row" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="0.3"
         android:layout_below="@id/member_id_row">
         <TextView 
             android:id="@+id/bin_lable"
             android:text="BIN:"
             android:textSize="20sp"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             />
         <TextView
            android:id="@+id/textview_bin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
     </LinearLayout>
     <LinearLayout
         android:id="@+id/pcn_row" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="0.3"
         android:layout_below="@id/bin_row">
         <TextView 
             android:id="@+id/pcn_lable"
             android:text="PCN:"
             android:textSize="20sp"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             />
         <TextView
            android:id="@+id/textview_pcn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
     </LinearLayout>
          <LinearLayout
         android:id="@+id/help_row" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_weight="1"
         android:layout_below="@id/pcn_row">
         <TextView 
             android:id="@+id/help_lable"
             android:text="Rx Help Desk:"
             android:textSize="15sp"
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:textStyle="bold"
             />
         <TextView
            android:id="@+id/textview_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
			android:layout_weight="1"
            android:textColor="#2b2257"
            android:textSize="@dimen/templet_font_size"
            android:textStyle="bold" />
     </LinearLayout>
</LinearLayout>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>