<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageview_ndc_rx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desp"
        android:src="@drawable/ic_image_video_ndc_rx" />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/About_National_Drug_Card"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/About_National_Drug_Card_Content"
        android:textSize="14sp"
        />

</LinearLayout>

</ScrollView>